<div class="row userform center-block">

  <%= form_for(:user, url: new_user_session_path) do |f| %>

    <h2 class="text-center">Login</h2>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= f.email_field :email, placeholder: " Email", required: true, autofocus: true, :class=>"userformcell" %>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= f.password_field :password, placeholder: " Password", required: false, autocomplete: "off", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), :class=>"userformcell" %>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= f.submit "Login", :class=>"btn btn-primary btn-block userformbtn", data: {disable_with: "Loading"} %>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-default btn-block userformbtn" %>
      <br>
    </div>

    <h3 class="text-center"> Forgot password? </h3>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= f.submit "Send me reset password instructions", :class=>"btn btn-info btn-block userformbtn", formaction: user_password_path %>
      <br>
    </div>
    
  <% end %>
  
  

</div>