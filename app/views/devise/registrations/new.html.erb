<h1 class="text-center">Sign up</h1>

<div class="row userform center-block">
  <%= form_for(:user, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <%= f.label :firstname, :class=>"userformlabel" %>
      <%= f.text_field :firstname, placeholder: " First Name", required: true, autofocus: true, :class=>"userformcell" %>
    </div>

    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <%= f.label :lastname, :class=>"userformlabel" %>
      <%= f.text_field :lastname, placeholder: " Last Name", required: true, :class=>"userformcell" %>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= f.label :email, :class=>"userformlabel" %>
      <%= f.email_field :email, placeholder: " Email", required: true, :class=>"userformcell" %>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= f.label "Password", :class=>"userformlabel" %>
      <%= f.password_field :password, placeholder: " Password", required: true, autocomplete: "off", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), :class=>"userformcell" %>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= f.label "Confirm password", :class=>"userformlabel" %>    
      <%= f.password_field :password_confirmation, placeholder: " Confirm Password", required: true, autocomplete: "off", :class=>"userformcell" %>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= f.submit "Sign up", :class=>"btn btn-primary btn-block userformbtn" %>
    </div>

  <% end %>
</div>