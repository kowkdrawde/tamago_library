
<div class="row userform center-block">

  <%= form_for(:user, url: user_password_path, html: { method: :post }) do |f| %>

    <h2 class="text-center">Forgot your password?</h2>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= f.email_field :email, placeholder: " Email", required: true, autofocus: true, :class=>"userformcell" %>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= f.submit "Send me reset password instructions", :class=>"btn btn-info btn-block userformbtn" %>
    </div>

  <% end %>
  

</div>
